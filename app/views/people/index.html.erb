<h1>People</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Address</th>
    </tr>
  </thead>
  <tbody>
  <% @people.each do |person| %>
    <tr>
      <td><%= person.name %></td>
      <td><%= person.phone %></td>
      <td>
        <% if person.address.nil? %>
          Address is not available
        <% else %>
        <%= person.address.city %>
        <% end %>
      </td>
      <td>
        <%= link_to "Show", person %> |
        <%= link_to "Edit", edit_person_path(person) %> |
        <%= link_to "Delete", person, method: :delete, confirm: "Are you sure you want to delete this person?" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to "Add Person", new_person_path %>

